<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapEditorActivity">

  <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.example.dndmap.MapFragment"
      android:id="@+id/map">

  </androidx.fragment.app.FragmentContainerView>
  <LinearLayout
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@drawable/bottom_panel"
      >
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnEditGrid"
        android:textSize="@dimen/text_size"
        android:background="@drawable/background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:id="@+id/btnScrollMode"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="20dp"
        android:background="@drawable/scroll"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnChangeBackground"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_background"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnAddCharacter"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/character"
        />
  </LinearLayout>



</FrameLayout>