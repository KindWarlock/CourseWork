<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapEditorActivity">

  <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:name="com.example.dndmap.MapFragment"
      android:id="@+id/map">

  </androidx.fragment.app.FragmentContainerView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="horizontal">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnEditGrid"
        android:text="Edit grid"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnScrollMode"
        android:text="Scroll"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnChangeBackground"
        android:backgroundTint="@color/teal_200"
        android:text="Change background"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnAddCharacter"
        android:backgroundTint="@color/black"
        android:text="Add character"
        android:layout_weight="1"/>
  </LinearLayout>



</LinearLayout>